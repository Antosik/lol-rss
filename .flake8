[flake8]

exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # venv directory
    venv,
    .venv,
    # serverless directory
    .serverless,
    # node_modules
    node_modules

max-complexity = 10
max-line-length = 175

statistics = True
count = True
show_source = True
